{
  "mcpServers": {
    "sanzaru": {
      "command": "uv",
      "args": [
        "run",
        "sanzaru"
      ],
      "env": {
        "OPENAI_API_KEY": "${OPENAI_API_KEY}",
        "VIDEO_PATH": "${VIDEO_PATH}",
        "IMAGE_PATH": "${IMAGE_PATH}",
        "AUDIO_PATH": "${AUDIO_PATH}",
        "LOG_LEVEL": "${LOG_LEVEL}"
      }
    }
  }
}
